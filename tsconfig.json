{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "removeComments": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "src/@types", "src/**/*.d.ts"],
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "src/*": ["*"],
      "src": ["*"],
      "codegen/*": ["apollo/codegen/*"],
      "codegen": ["apollo/codegen"],
      "context/*": ["context/*"],
      "context": ["context"],
      "types/*": ["@types/*"],
      "types": ["@types"],
      "theme/*": ["theme/*"],
      "theme": ["theme"],
      "hooks": ["hooks"],
      "hooks/*": ["hooks/*"],
      "auxiliary": ["auxiliary"],
      "utils/*": ["utils/*"],
      "utils": ["utils"],
      "images/*": ["static/images/*"],
      "images": ["static/images"],
      "components/*": ["components/*"],
      "components": ["components"],
      "@permissions": ["app.state/permissions"],
      "@permissions/*": ["app.state/permissions/*"],
      "apps/*": ["apps/*"],
      "apps": ["apps"],
      "@customers/*": ["apps/customers/*"],
      "@customers": ["apps/customers"],
      "@admin/*": ["apps/admin/*"],
      "@admin": ["apps/admin"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.stories.*", "src/apollo/**/*.ts"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
